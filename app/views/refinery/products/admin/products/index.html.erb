<%= render '/refinery/products/admin/submenu' %>
<%= render 'refinery/admin/search_header', :url => request.path %>
<div id='records'>
  <% if @products.any? %>
    <%= will_paginate @products %>

    <%= render "sortable_list" %>

    <%= will_paginate @products %>
  <% else %>
    <% if searching? %>
      <%= t('no_results', :scope => 'refinery.admin.search') %>
    <% else %>
      <p>
        <strong>
          <%= t('.no_items_yet', :create => t('new', :scope => 'refinery.products.admin.submenu.products')) %>
        </strong>
      </p>
    <% end %>
  <% end %>
</div>